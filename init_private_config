#!/bin/bash

set -eu

local_config_dir=~/.local/config
original_config_dir=~/.local/config_original
if [ -d $local_config_dir ] || [ -d $original_config_dir ]; then
   echo "$local_config_dir or $original_config_dir exist. Exiting"
   exit 1
fi

mkdir -p ~/.local
# git clone git@github.com:moisei/unix_config.git $local_config_dir
git clone https://github.com/moisei/unix_config.git $local_config_dir
mkdir -p $original_config_dir
mv ~/.profile ~/.bash_profile ~/.bashrc ~/.gitconfig "${original_config_dir}" &> /dev/null || echo .

ln -s "${local_config_dir}/bash/profile" ~/.profile
ln -s "${local_config_dir}/bash/git/gitconfig"  ~/.gitconfig
